{
  "name": "Agile Trello",
  "short_name": "Agile Trello",
  "version": "1.0",
  "description": "All the handy Trello plugins in one",
  "manifest_version": 2,
  "permissions": ["tabs", "https://trello.com/*", "storage", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/agile-trello16.png",
      "32": "images/agile-trello32.png",
      "48": "images/agile-trello48.png",
      "128": "images/agile-trello128.png"
    }
  },
  "icons": {
    "16": "images/agile-trello16.png",
    "32": "images/agile-trello32.png",
    "48": "images/agile-trello48.png",
    "128": "images/agile-trello128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://trello.com/*"],
      "js": ["agile-trello-setup.js"]
    }
  ],
  "web_accessible_resources": [
    "trello-ui.js",
    "agile-trello.js",
    "card-totals.js"
  ]
}
